BACKEND_PORT=3000
SESSION_SECRET=replace-with-strong-random-secret

# Local MongoDB in docker-compose
MONGODB_URI=mongodb://mongo:27017/ez-erp

# Comma-separated allowed origins for CORS
# In production behind the same host, prefer using the NGINX /api proxy and leave this to your frontend URL(s)
CORS_ORIGINS=http://localhost:5173,http://localhost:8080

# Set to 1 if behind a reverse proxy/load balancer
TRUST_PROXY=1
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

FRONTEND_PORT=8080

DEV_PORT=5173

# Browser-facing API base URL. Using '/api' avoids hard-coding server IPs.
VITE_API_URL=/api

# Optional cookie overrides
# COOKIE_SECURE=true
# COOKIE_SAMESITE=none



# AWS S3 (for item image uploads)
# AWS region, e.g. us-east-1
AWS_REGION=
# S3 bucket name
AWS_S3_BUCKET=
# Credentials for backend server (do NOT commit real values)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Optional: MinIO/local S3-compatible config
# Example for local MinIO: S3_ENDPOINT=http://localhost:9000 and S3_FORCE_PATH_STYLE=true
S3_ENDPOINT=10.0.0.150:9000
S3_FORCE_PATH_STYLE=true

