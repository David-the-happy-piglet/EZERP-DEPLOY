BACKEND_PORT=3000
SESSION_SECRET=replace-with-strong-random-secret

# Local MongoDB in docker-compose
MONGODB_URI=mongodb://mongo:27017/ez-erp

# Comma-separated allowed origins for CORS
# In production behind the same host, prefer using the NGINX /api proxy and leave this to your frontend URL(s)
CORS_ORIGINS=http://localhost:5173,http://localhost:8080

# Set to 1 if behind a reverse proxy/load balancer
TRUST_PROXY=1
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

FRONTEND_PORT=8080

DEV_PORT=5173

# Browser-facing API base URL. Using '/api' avoids hard-coding server IPs.
VITE_API_URL=/api

# Optional cookie overrides
# COOKIE_SECURE=true
# COOKIE_SAMESITE=none


